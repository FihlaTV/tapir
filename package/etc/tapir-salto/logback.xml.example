<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender class="ch.qos.logback.core.rolling.RollingFileAppender" name="DEFAULT">
        <file>/var/log/tapir-salto/default.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- daily rollover -->
            <fileNamePattern>/var/log/tapir-salto/%d{yyyy-MM-dd}.default.log</fileNamePattern>
            <!-- keep 15 days' worth of history -->
            <maxHistory>15</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{dd-MM-yyyy HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="io.sip3.tapir.salto" level="INFO" additivity="false">
        <appender-ref ref="DEFAULT" />
    </logger>

    <logger name="io.sip3.tapir" level="ERROR" additivity="false">
        <appender-ref ref="DEFAULT" />
    </logger>

    <root level="ERROR">
        <appender-ref ref="DEFAULT" />
    </root>
</configuration>
